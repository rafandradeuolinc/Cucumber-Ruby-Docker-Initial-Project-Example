desc "Runn tests in dev"
task :test_dev do
  puts "Running test:dev"
  sh "bundle exec cucumber -p pretty -p html -p dev"
end

desc "Runn tests in hmg"
task :test_hmg do
  puts "Running test:hmg"
  sh "bundle exec cucumber -p pretty -p html -p hmg"
end

desc "Runn tests in prod"
task :test_prod do
  puts "Running test:prod"
  sh "bundle exec cucumber -p pretty -p html -p prod"
end